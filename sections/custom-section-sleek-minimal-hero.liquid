{{ 'section-sleek-minimal-hero.css' | asset_url | stylesheet_tag }}
<script src="{{ 'section-sleek-minimal-hero.js' | asset_url }}" defer></script>

<div class="custom-section-sleek-minimal-hero">
  <div class="custom-section-sleek-minimal-hero__container">

    {%- if section.settings.quote_text != blank -%}
      <p class="custom-section-sleek-minimal-hero__quote">
        {{ section.settings.quote_text }}
      </p>
    {%- endif -%}

    {%- if section.settings.hero_image != blank -%}
      <div class="custom-section-sleek-minimal-hero__image-wrapper">
        <div class="custom-section-sleek-minimal-hero__image-container">
          <img
            class="custom-section-sleek-minimal-hero__image"
            src="{{ section.settings.hero_image | image_url: width: 1412 }}"
            srcset="{{ section.settings.hero_image | image_url: width: 353 }} 353w,
                    {{ section.settings.hero_image | image_url: width: 706 }} 706w,
                    {{ section.settings.hero_image | image_url: width: 1059 }} 1059w,
                    {{ section.settings.hero_image | image_url: width: 1412 }} 1412w"
            sizes="(max-width: 767px) 90vw, (max-width: 1024px) 706px, 706px"
            alt="{{ section.settings.hero_image.alt | escape }}"
            loading="lazy"
          >

          <div class="custom-section-sleek-minimal-hero__content-overlay">
            {%- if section.settings.heading != blank -%}
              <h2 class="custom-section-sleek-minimal-hero__heading">
                {{ section.settings.heading }}
              </h2>
            {%- endif -%}

            {%- if section.settings.description != blank -%}
              <p class="custom-section-sleek-minimal-hero__description">
                {{ section.settings.description }}
              </p>
            {%- endif -%}

            {%- if section.settings.button_text != blank -%}
              <a
                href="{{ section.settings.button_link }}"
                class="custom-section-sleek-minimal-hero__button"
              >
                {{ section.settings.button_text }}
              </a>
            {%- endif -%}
          </div>
        </div>
      </div>
    {%- endif -%}

  </div>
</div>

{% schema %}
{
  "name": "Sleek Minimal Hero",
  "settings": [
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#fffaf5"
    },
    {
      "type": "header",
      "content": "Quote Section"
    },
    {
      "type": "textarea",
      "id": "quote_text",
      "label": "Quote Text",
      "default": "\"A capsule collection for intuitive self-expression throughout party season\""
    },
    {
      "type": "header",
      "content": "Hero Image"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image",
      "info": "Recommended size: 706 x 897px (aspect ratio 0.786:1)"
    },
    {
      "type": "header",
      "content": "Content Overlay"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Sleek Minimal"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Diamension's Corporate line redefines daily luxury for those who lead with confidence. Designed for the boardroom and beyond, each piece reflects understated brilliance."
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "EXPLORE"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Sleek Minimal Hero"
    }
  ]
}
{% endschema %}
