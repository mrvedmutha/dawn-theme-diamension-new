{{ 'section-two-image-hero-studio.css' | asset_url | stylesheet_tag }}
<script src="{{ 'section-two-image-hero-studio.js' | asset_url }}" defer></script>

<div class="custom-section-two-image-hero-studio">
  <div class="custom-section-two-image-hero-studio__container">
    {%- comment -%} Left Image Panel {%- endcomment -%}
    <div class="custom-section-two-image-hero-studio__left">
      {%- if section.settings.left_image != blank -%}
        {{
          section.settings.left_image
          | image_url: width: 1200
          | image_tag: loading: 'lazy', class: 'custom-section-two-image-hero-studio__left-image'
        }}
      {%- else -%}
        <div class="custom-section-two-image-hero-studio__left-placeholder">
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {%- endif -%}
    </div>

    {%- comment -%} Right Image Panel with Content {%- endcomment -%}
    <div class="custom-section-two-image-hero-studio__right">
      {%- comment -%} Background Image {%- endcomment -%}
      {%- if section.settings.right_background_image != blank -%}
        <div class="custom-section-two-image-hero-studio__right-background">
          {{
            section.settings.right_background_image
            | image_url: width: 1600
            | image_tag:
              loading: 'lazy',
              class: 'custom-section-two-image-hero-studio__right-background-image'
          }}
        </div>
      {%- else -%}
        <div
          class="custom-section-two-image-hero-studio__right-background"
          style="background-color: {{ section.settings.background_color }};"
        ></div>
      {%- endif -%}

      {%- comment -%} Product Image Layer {%- endcomment -%}
      {%- if section.settings.product_image != blank -%}
        <div class="custom-section-two-image-hero-studio__product-image-wrapper">
          {{
            section.settings.product_image
            | image_url: width: 1200
            | image_tag: loading: 'lazy', class: 'custom-section-two-image-hero-studio__product-image'
          }}
        </div>
      {%- endif -%}

      {%- comment -%} Content Overlay {%- endcomment -%}
      <div class="custom-section-two-image-hero-studio__content">
        {%- comment -%} Tagline {%- endcomment -%}
        {%- if section.settings.tagline != blank -%}
          <p
            class="custom-section-two-image-hero-studio__tagline"
            style="color: {{ section.settings.text_color }};"
          >
            {{ section.settings.tagline }}
          </p>
        {%- endif -%}

        {%- comment -%} CTA Link {%- endcomment -%}
        {%- if section.settings.cta_text != blank -%}
          <a
            href="{{ section.settings.cta_link }}"
            class="custom-section-two-image-hero-studio__cta"
            style="color: {{ section.settings.text_color }};"
          >
            {{ section.settings.cta_text }}
          </a>
        {%- endif -%}

        {%- comment -%} Heading {%- endcomment -%}
        {%- if section.settings.heading != blank -%}
          <h2
            class="custom-section-two-image-hero-studio__heading"
            style="color: {{ section.settings.text_color }};"
          >
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Two Image Hero - Studio",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Left Image"
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Lifestyle Image",
      "info": "Recommended size: 1200px Ã— 1600px"
    },
    {
      "type": "header",
      "content": "Right Panel - Background"
    },
    {
      "type": "image_picker",
      "id": "right_background_image",
      "label": "Background Image",
      "info": "Main background image for right panel"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color (fallback)",
      "default": "#C8102E",
      "info": "Used if no background image is uploaded"
    },
    {
      "type": "header",
      "content": "Right Panel - Product Image"
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Product Image",
      "info": "Product image layer (necklace, etc.)"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "For the Ones Who Define Success"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Explore"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link URL"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Sleek Minimal"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFAF5"
    }
  ],
  "presets": [
    {
      "name": "Two Image Hero - The Studio"
    }
  ]
}
{% endschema %}
