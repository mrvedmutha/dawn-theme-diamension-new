      "info": "Direct video link (.mp4, .webm) or Shopify CDN URL"
    },
    {
      "type": "image_picker",
      "id": "center_image",
      "label": "Center Fallback Image"
    },
    {
      "type": "header",
      "content": "Right Video/Image"
    },
    {
      "type": "text",
      "id": "right_video",
      "label": "Right Video URL",
      "info": "Direct video link (.mp4, .webm) or Shopify CDN URL"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Fallback Image"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "richtext",
