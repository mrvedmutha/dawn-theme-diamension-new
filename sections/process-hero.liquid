{{ 'process-hero.css' | asset_url | stylesheet_tag }}

{%- comment -%} Process Hero Section {%- endcomment -%}
<div class="process-hero" data-section-id="{{ section.id }}">
  {%- comment -%} Last frame background layers {%- endcomment -%}
  <div class="process-hero__background">
    <img
      class="process-hero__bg-layer process-hero__bg-layer--background"
      src="{{ 'custom-section-brillance-3d/background-sequence/2FEB26-BGCubesWebP-f0260Output.webp' | asset_url }}"
      alt=""
      loading="eager"
    >
    <img
      class="process-hero__bg-layer process-hero__bg-layer--foreground"
      src="{{ 'custom-section-brillance-3d/front-sequence/2FEB26-TweezersCubesWebP-f0260Output.webp' | asset_url }}"
      alt=""
      loading="eager"
    >
  </div>

  {%- comment -%} Content Overlay {%- endcomment -%}
  <div class="process-hero__content">
    {%- if section.settings.heading != blank -%}
      <h1 class="process-hero__heading" data-heading>
        {{ section.settings.heading }}
      </h1>
    {%- endif -%}
  </div>

  {%- comment -%} Page Transition Overlay - Enter Animation {%- endcomment -%}
  <div class="process-hero__transition-overlay" data-transition-overlay>&nbsp;</div>
</div>

<script src="{{ 'process-hero.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Process Hero",
  "class": "section-process-hero",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to the process"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#183754"
    }
  ],
  "presets": [
    {
      "name": "Process Hero"
    }
  ]
}
{% endschema %}
