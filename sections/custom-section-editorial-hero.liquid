{{ 'section-editorial-hero.css' | asset_url | stylesheet_tag }}

<div class="custom-section-editorial-hero" data-section-id="{{ section.id }}">
  {% if section.settings.background_image != blank %}
    <div class="custom-section-editorial-hero__background">
      <img
        src="{{ section.settings.background_image | image_url: width: 1920 }}"
        srcset="{{ section.settings.background_image | image_url: width: 600 }} 600w,
                {{ section.settings.background_image | image_url: width: 1200 }} 1200w,
                {{ section.settings.background_image | image_url: width: 1920 }} 1920w"
        sizes="100vw"
        alt="{{ section.settings.background_image.alt | escape }}"
        loading="lazy"
        class="custom-section-editorial-hero__image"
      >
    </div>
  {% endif %}

  <div class="custom-section-editorial-hero__content">
    {% if section.settings.heading != blank %}
      <h2 class="custom-section-editorial-hero__heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    {% if section.settings.tagline != blank %}
      <p class="custom-section-editorial-hero__tagline">
        {{ section.settings.tagline }}
      </p>
    {% endif %}

    {% if section.settings.cta_text != blank and section.settings.cta_link != blank %}
      <a href="{{ section.settings.cta_link }}" class="custom-section-editorial-hero__cta">
        {{ section.settings.cta_text }}
      </a>
    {% endif %}
  </div>
</div>

<script src="{{ 'section-editorial-hero.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Editorial Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image",
      "info": "Recommended size: 1920x800px"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Jewellery"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "will outlast fashion, and all of us."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Explore Collections"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    }
  ],
  "presets": [
    {
      "name": "Editorial Hero"
    }
  ]
}
{% endschema %}
