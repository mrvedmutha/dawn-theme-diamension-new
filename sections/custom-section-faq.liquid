{{ 'section-faq.css' | asset_url | stylesheet_tag }}

<div class="custom-section-faq">
  <div class="custom-section-faq__wrapper">
    <div class="custom-section-faq__container">
      {%- comment -%} Left Column: Info Menu (exactly like Contact Page) {%- endcomment -%}
      <aside class="custom-section-faq__sidebar">
        <div class="custom-section-faq__sidebar-sticky">
          {% if section.settings.menu_title != blank %}
            <h1 class="custom-section-faq__menu-title">
              {{ section.settings.menu_title }}
            </h1>
          {% endif %}

          <nav class="custom-section-faq__menu">
            {% for block in section.blocks %}
              {% if block.type == 'info_menu_item' %}
                <div class="custom-section-faq__menu-item-wrapper" {{ block.shopify_attributes }}>
                  {% if block.settings.menu_link != blank %}
                    <a
                      href="{{ block.settings.menu_link }}"
                      class="custom-section-faq__menu-link{% if block.settings.is_active %} custom-section-faq__menu-link--active{% endif %}"
                    >
                      {{ block.settings.menu_text }}
                    </a>
                  {% else %}
                    <span class="custom-section-faq__menu-link{% if block.settings.is_active %} custom-section-faq__menu-link--active{% endif %}">
                      {{ block.settings.menu_text }}
                    </span>
                  {% endif %}
                  <div class="custom-section-faq__menu-divider">&nbsp;</div>
                </div>
              {% endif %}
            {% endfor %}
          </nav>
        </div>
      </aside>

      {%- comment -%} Right Column: FAQ Content {%- endcomment -%}
      <main class="custom-section-faq__content">

        {% if section.settings.page_title != blank %}
          <h1 class="custom-section-faq__page-title">
            {{ section.settings.page_title }}
          </h1>
        {% endif %}

        {%- comment -%} Get all unique categories from FAQ blocks {%- endcomment -%}
        {% assign faq_blocks = section.blocks | where: 'type', 'faq_item' %}
        {% assign categories = '' %}
        {% for block in faq_blocks %}
          {% unless categories contains block.settings.category_id %}
            {% assign categories = categories | append: block.settings.category_id | append: ',' %}
          {% endunless %}
        {% endfor %}
        {% assign category_array = categories | split: ',' %}

        {%- comment -%} Tab Navigation {%- endcomment -%}
        {% if category_array.size > 0 %}
          <div class="custom-section-faq__tabs-container">
            <div class="custom-section-faq__tabs" data-faq-tabs>
              {% for category_id in category_array %}
                {% if category_id != blank %}
                  {%- comment -%} Find first FAQ in this category manually {%- endcomment -%}
                  {% assign first_in_category = nil %}
                  {% for faq in faq_blocks %}
                    {% assign faq_cat = faq.settings.category_id | strip %}
                    {% assign current_cat = category_id | strip %}
                    {% if faq_cat == current_cat and first_in_category == nil %}
                      {% assign first_in_category = faq %}
                    {% endif %}
                  {% endfor %}

                  {% if first_in_category %}
                    <button
                      class="custom-section-faq__tab{% if forloop.first %} custom-section-faq__tab--active{% endif %}"
                      data-tab="{{ category_id }}"
                      aria-label="Show {{ first_in_category.settings.category_label }} FAQs"
                    >
                      {{ first_in_category.settings.category_label }}
                    </button>
                  {% endif %}
                {% endif %}
              {% endfor %}
            </div>
            <div class="custom-section-faq__tabs-underline">&nbsp;</div>
          </div>
        {% endif %}

        {%- comment -%} FAQ Categories {%- endcomment -%}
        <div class="custom-section-faq__categories">
          {% for category_id in category_array %}
            {% if category_id != blank %}
              {%- comment -%} Find first FAQ for category heading {%- endcomment -%}
              {% assign first_faq = nil %}
              {% assign faq_count = 0 %}
              {% for faq in faq_blocks %}
                {% assign faq_cat = faq.settings.category_id | strip %}
                {% assign current_cat = category_id | strip %}
                {% if faq_cat == current_cat %}
                  {% assign faq_count = faq_count | plus: 1 %}
                  {% if first_faq == nil %}
                    {% assign first_faq = faq %}
                  {% endif %}
                {% endif %}
              {% endfor %}

              <div
                class="custom-section-faq__category"
                data-tab-content="{{ category_id }}"
              >
                {% if first_faq.settings.category_label != blank %}
                  <h2 class="custom-section-faq__category-heading">
                    {{ first_faq.settings.category_label | upcase }}
                  </h2>
                {% endif %}

                <div class="custom-section-faq__faq-list">
                  {% for block in faq_blocks %}
                    {% assign block_cat = block.settings.category_id | strip %}
                    {% assign current_cat = category_id | strip %}
                    {% if block_cat == current_cat %}
                      <div class="custom-section-faq__faq-item" data-faq-item {{ block.shopify_attributes }}>
                      <button
                        class="custom-section-faq__question-wrapper"
                        data-faq-toggle
                        aria-expanded="false"
                      >
                        <h3 class="custom-section-faq__question">
                          {{ block.settings.question }}
                        </h3>
                        <span class="custom-section-faq__icon">
                          <svg
                            class="custom-section-faq__icon-plus"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            xmlns="http://www.w3.org/2000/svg"
                          >
                            <path d="M12 5V19M5 12H19" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                          </svg>
                          <svg
                            class="custom-section-faq__icon-minus"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            xmlns="http://www.w3.org/2000/svg"
                            style="display: none;"
                          >
                            <path d="M5 12H19" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                          </svg>
                        </span>
                      </button>

                      <div class="custom-section-faq__answer">
                        <div class="custom-section-faq__answer-content">
                          {{ block.settings.answer }}
                        </div>
                      </div>

                      <div class="custom-section-faq__divider">&nbsp;</div>
                    </div>
                    {% endif %}
                  {% endfor %}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </main>
    </div>
  </div>
</div>

<script src="{{ 'section-faq.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "FAQ Page",
  "settings": [
    {
      "type": "header",
      "content": "Info Menu Settings"
    },
    {
      "type": "text",
      "id": "menu_title",
      "label": "Menu Title",
      "default": "INFO"
    },
    {
      "type": "header",
      "content": "FAQ Settings"
    },
    {
      "type": "text",
      "id": "page_title",
      "label": "Page Title",
      "default": "Frequently Asked Questions"
    }
  ],
  "blocks": [
    {
      "type": "info_menu_item",
      "name": "Menu Item",
      "settings": [
        {
          "type": "text",
          "id": "menu_text",
          "label": "Menu Text",
          "default": "FAQS"
        },
        {
          "type": "url",
          "id": "menu_link",
          "label": "Menu Link",
          "info": "Leave blank for non-clickable text"
        },
        {
          "type": "checkbox",
          "id": "is_active",
          "label": "Is Active/Current Page",
          "default": false,
          "info": "Check this to highlight as the current page"
        }
      ]
    },
    {
      "type": "faq_item",
      "name": "FAQ Question",
      "settings": [
        {
          "type": "text",
          "id": "category_id",
          "label": "Category ID",
          "default": "orders",
          "info": "Group questions by category (e.g., 'orders', 'shipping', 'returns'). Must match across questions in same category."
        },
        {
          "type": "text",
          "id": "category_label",
          "label": "Category Label",
          "default": "Orders Issues",
          "info": "Display name for this category. Should be the same for all questions in this category."
        },
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "What's your return policy?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>For domestic orders, you may return most unworn or unused items within 10 business days of the delivery date for a full refund.</p>"
        }
      ]
    }
  ],
