{{ 'section-diamension-follow-insta.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign headline_text = section.settings.headline_text
  assign cta_text = section.settings.cta_text
  assign cta_url = section.settings.cta_url
  assign image_1 = section.settings.image_1
  assign image_2 = section.settings.image_2
  assign image_3 = section.settings.image_3
  assign image_4 = section.settings.image_4
  assign show_decorative_ellipse = section.settings.show_decorative_ellipse
-%}

<section
  class="custom-section-diamension-follow-insta"
  data-section-id="{{ section.id }}"
  data-section-type="diamension-follow-insta"
>
  <div class="custom-section-diamension-follow-insta__wrapper">
    <div class="custom-section-diamension-follow-insta__container">
      {%- comment -%} Headline {%- endcomment -%}
      {%- if headline_text != blank -%}
        <h2 class="custom-section-diamension-follow-insta__headline">
          {{ headline_text }}
        </h2>
      {%- endif -%}

      {%- comment -%} Decorative Ellipse Background (Desktop Only) {%- endcomment -%}
      {%- if show_decorative_ellipse -%}
        <div class="custom-section-diamension-follow-insta__ellipse">
          <img
            src="{{ 'custom-section-instagram/instagram-section-circle.svg' | asset_url }}"
            alt=""
            class="custom-section-diamension-follow-insta__ellipse-svg"
          >
        </div>
      {%- endif -%}

      {%- comment -%}
        Asymmetric Masonry Grid - Image Grid
        Images overlap by 56px (328px - 56px = 272px spacing)
        Total grid width: 1144px, centered with 64px margins
      {%- endcomment -%}
      <div class="custom-section-diamension-follow-insta__images">
        {%- comment -%} Image 1 (Odd, z-index: 2, left: 0) {%- endcomment -%}
        {%- if image_1 != blank -%}
          <div class="custom-section-diamension-follow-insta__image-wrapper custom-section-diamension-follow-insta__image-wrapper--1">
            <img
              src="{{ image_1 | image_url: width: 760 }}"
              srcset="
                {{ image_1 | image_url: width: 380 }} 380w,
                {{ image_1 | image_url: width: 570 }} 570w,
                {{ image_1 | image_url: width: 760 }} 760w
              "
              sizes="(max-width: 767px) 50vw, (max-width: 1024px) 328px, 380px"
              alt="{{ image_1.alt | default: 'Instagram image 1' }}"
              class="custom-section-diamension-follow-insta__image js-parallax-image"
              loading="lazy"
            >
          </div>
        {%- endif -%}

        {%- comment -%} Image 2 (Even, z-index: 3, left: 272px) {%- endcomment -%}
        {%- if image_2 != blank -%}
          <div class="custom-section-diamension-follow-insta__image-wrapper custom-section-diamension-follow-insta__image-wrapper--2">
            <img
              src="{{ image_2 | image_url: width: 760 }}"
              srcset="
                {{ image_2 | image_url: width: 380 }} 380w,
                {{ image_2 | image_url: width: 570 }} 570w,
                {{ image_2 | image_url: width: 760 }} 760w
              "
              sizes="(max-width: 767px) 50vw, (max-width: 1024px) 328px, 380px"
              alt="{{ image_2.alt | default: 'Instagram image 2' }}"
              class="custom-section-diamension-follow-insta__image js-parallax-image"
              loading="lazy"
            >
          </div>
        {%- endif -%}

        {%- comment -%} Image 3 (Odd, z-index: 4, left: 544px) {%- endcomment -%}
        {%- if image_3 != blank -%}
          <div class="custom-section-diamension-follow-insta__image-wrapper custom-section-diamension-follow-insta__image-wrapper--3">
            <img
              src="{{ image_3 | image_url: width: 760 }}"
              srcset="
                {{ image_3 | image_url: width: 380 }} 380w,
                {{ image_3 | image_url: width: 570 }} 570w,
                {{ image_3 | image_url: width: 760 }} 760w
              "
              sizes="(max-width: 767px) 50vw, (max-width: 1024px) 328px, 380px"
              alt="{{ image_3.alt | default: 'Instagram image 3' }}"
              class="custom-section-diamension-follow-insta__image js-parallax-image"
              loading="lazy"
            >
          </div>
        {%- endif -%}

        {%- comment -%} Image 4 (Even, z-index: 5, left: 816px) {%- endcomment -%}
        {%- if image_4 != blank -%}
          <div class="custom-section-diamension-follow-insta__image-wrapper custom-section-diamension-follow-insta__image-wrapper--4">
            <img
              src="{{ image_4 | image_url: width: 760 }}"
              srcset="
                {{ image_4 | image_url: width: 380 }} 380w,
                {{ image_4 | image_url: width: 570 }} 570w,
                {{ image_4 | image_url: width: 760 }} 760w
              "
              sizes="(max-width: 767px) 50vw, (max-width: 1024px) 328px, 380px"
              alt="{{ image_4.alt | default: 'Instagram image 4' }}"
              class="custom-section-diamension-follow-insta__image js-parallax-image"
              loading="lazy"
            >
          </div>
        {%- endif -%}
      </div>

      {%- comment -%} CTA Link {%- endcomment -%}
      {%- if cta_text != blank and cta_url != blank -%}
        <a
          href="{{ cta_url }}"
          class="custom-section-diamension-follow-insta__cta"
          target="_blank"
          rel="noopener noreferrer"
        >
          {{ cta_text }}
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

<script src="{{ 'section-diamension-follow-insta.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Diamension Instagram",
  "tag": "section",
  "class": "section-diamension-follow-insta",
  "settings": [
    {
      "type": "header",
      "content": "Headline"
    },
    {
      "type": "text",
      "id": "headline_text",
      "label": "Headline Text",
      "default": "FOLLOW US ON\nINSTAGRAM",
      "info": "Use line break for two lines (FOLLOW US ON / INSTAGRAM)"
    },
    {
      "type": "header",
      "content": "Instagram Images"
    },
    {
      "type": "paragraph",
      "content": "Upload 4 square images (1:1 ratio). Recommended size: 1000Ã—1000px or larger. Desktop layout creates an asymmetric masonry grid with 56px overlapping images."
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1",
      "info": "First image (odd - top to bottom parallax on desktop)"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2",
      "info": "Second image (even - bottom to top parallax on desktop)"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3",
      "info": "Third image (odd - top to bottom parallax on desktop)"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Image 4",
      "info": "Fourth image (even - bottom to top parallax on desktop)"
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Instagram",
      "info": "Link text (e.g., 'Instagram' or 'Follow Us')"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Instagram URL",
      "info": "Link to your Instagram profile"
    },
    {
      "type": "header",
      "content": "Design Options"
    },
    {
      "type": "checkbox",
      "id": "show_decorative_ellipse",
      "label": "Show decorative ellipse (desktop only)",
      "default": true,
      "info": "Display decorative background ellipse on desktop. Hidden on tablet/mobile."
    }
  ],
  "presets": [
    {
      "name": "Diamension Follow Instagram"
    }
  ]
}
{% endschema %}
