{{ 'section-jewel-care-accordion.css' | asset_url | stylesheet_tag }}

<div class="custom-section-jewel-care-accordion">
  <div class="custom-section-jewel-care-accordion__wrapper">
    <div class="custom-section-jewel-care-accordion__container">
      {% if section.settings.heading != blank %}
        <h2 class="custom-section-jewel-care-accordion__heading">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.blocks.size > 0 %}
        <div class="custom-section-jewel-care-accordion__items">
          {% for block in section.blocks %}
            <div
              class="custom-section-jewel-care-accordion__item {% if forloop.first %}is-active{% endif %}"
              {{ block.shopify_attributes }}
              data-accordion-item
            >
              <button
                class="custom-section-jewel-care-accordion__item-header"
                data-accordion-trigger
                aria-expanded="{% if forloop.first %}true{% else %}false{% endif %}"
              >
                <span class="custom-section-jewel-care-accordion__item-title">{{ block.settings.title }}</span>
                <span class="custom-section-jewel-care-accordion__item-icon" data-accordion-icon>
                  <svg
                    class="custom-section-jewel-care-accordion__icon custom-section-jewel-care-accordion__icon--minus"
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                  >
                    <path d="M5 12H19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  <svg
                    class="custom-section-jewel-care-accordion__icon custom-section-jewel-care-accordion__icon--plus"
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                  >
                    <path d="M5 12H19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M12 5V19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </span>
              </button>

              <div class="custom-section-jewel-care-accordion__item-content" data-accordion-content>
                <div class="custom-section-jewel-care-accordion__item-content-inner">
                  {% if block.settings.image != blank %}
                    <div class="custom-section-jewel-care-accordion__item-image">
                      <img
                        src="{{ block.settings.image | image_url: width: 600 }}"
                        srcset="
                          {{ block.settings.image | image_url: width: 300 }} 300w,
                          {{ block.settings.image | image_url: width: 600 }} 600w
                        "
                        sizes="300px"
                        alt="{{ block.settings.image.alt | escape }}"
                        loading="lazy"
                      >
                    </div>
                  {% endif %}

                  {% if block.settings.content != blank %}
                    <div class="custom-section-jewel-care-accordion__item-text">
                      {{ block.settings.content }}
                    </div>
                  {% endif %}
                </div>
              </div>

              <div class="custom-section-jewel-care-accordion__item-divider">&nbsp;</div>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

<script src="{{ 'section-jewel-care-accordion.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Jewelry Care Accordion",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Jewelry care guide"
    }
  ],
  "blocks": [
    {
      "type": "accordion_item",
      "name": "Accordion Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Accordion Title"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image (Optional)"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p>Add your content here.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Jewelry Care Accordion",
      "blocks": [
        {
          "type": "accordion_item",
          "settings": {
            "title": "JEWELRY STORAGE",
            "content": "<p>While our 14k solid gold pieces are crafted to keep up with your everyday moments, we recommend removing them during intense activities or when heading to the beach or gym.</p><p>At home, store your pieces in a secure jewelry box, your Kinn pouch, or a dedicated dish to keep them protected and free from tangles.</p>"
          }
        },
        {
          "type": "accordion_item",
          "settings": {
            "title": "CLEANING & POLISHING"
          }
        },
        {
          "type": "accordion_item",
          "settings": {
            "title": "WHAT TO AVOID"
          }
        },
        {
          "type": "accordion_item",
          "settings": {
            "title": "STERLING SILVER"
          }
        }
      ]
    }
  ]
}
{% endschema %}
