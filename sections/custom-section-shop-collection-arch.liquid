                    <a href="{{ section.settings.center_cta_link }}" class="custom-section-shop-collection-arch__cta">
                      {{ section.settings.center_cta_text }}
                    </a>
                  {% else %}
                    <span class="custom-section-shop-collection-arch__cta">
                      {{ section.settings.center_cta_text }}
