{{ 'section-brand-story.css' | asset_url | stylesheet_tag }}

<section class="custom-section-brand-story" data-section-id="{{ section.id }}">
  <div class="custom-section-brand-story__container">
    <div class="custom-section-brand-story__content">
      <div class="custom-section-brand-story__content-inner">
        {% if section.settings.heading != blank %}
          <h2 class="custom-section-brand-story__heading animate-on-scroll">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.content != blank %}
          <div class="custom-section-brand-story__text animate-on-scroll">
            {{ section.settings.content }}
          </div>
        {% endif %}
      </div>
    </div>

    <div class="custom-section-brand-story__image-wrapper">
      {% if section.settings.background_image != blank %}
        <div
          class="custom-section-brand-story__image"
          style="background-image: url('{{ section.settings.background_image | image_url: width: 1440 }}');"
        >
          {% if section.settings.show_logo_overlay %}
            <div class="custom-section-brand-story__logo-overlay animate-on-scroll">
              {{ 'custom-section-diamension-quote/logo/diamension-logo.svg' | asset_url | image_tag }}
            </div>
          {% endif %}
        </div>
      {% else %}
        <div class="custom-section-brand-story__image custom-section-brand-story__image--placeholder">
          <span class="custom-section-brand-story__placeholder-text">Add a background image</span>
          {% if section.settings.show_logo_overlay %}
            <div class="custom-section-brand-story__logo-overlay animate-on-scroll">
              {{ 'custom-section-diamension-quote/logo/diamension-logo.svg' | asset_url | image_tag }}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

<script src="{{ 'section-brand-story.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Brand Story About Us",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "OUR STORY"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Diamensions was born with a singular vision: to make brilliance better. Backed by over 25 years of expertise from our parent company HVK Diamonds, we combine tradition with cutting-edge technology to redefine what diamonds mean for today's generation.</p><p>From manufacturing lab-grown diamonds and gold to supplying leading global jewelers, our journey is one of precision, integrity, and ambition.</p>"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image",
      "info": "Recommended minimum width: 1440px for best quality"
    },
    {
      "type": "checkbox",
      "id": "show_logo_overlay",
      "label": "Show Logo Overlay",
      "default": true,
      "info": "Display Diamension logo centered on the background image"
    }
  ],
  "presets": [
    {
      "name": "Brand Story About Us"
    }
  ]
}
{% endschema %}
