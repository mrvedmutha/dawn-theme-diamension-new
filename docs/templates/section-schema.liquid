{% comment %}
  Section Schema Template
  Copy this template for new sections
{% endcomment %}

{{ 'section-name.css' | asset_url | stylesheet_tag }}

<div class="custom-section-name">
  <div class="custom-section-name__container">

    {% comment %} Image {% endcomment %}
    {% if section.settings.image %}
      <img
        class="custom-section-name__image"
        src="{{ section.settings.image | image_url: width: 1920 }}"
        srcset="{{ section.settings.image | image_url: width: 600 }} 600w,
                {{ section.settings.image | image_url: width: 1200 }} 1200w,
                {{ section.settings.image | image_url: width: 1920 }} 1920w"
        sizes="100vw"
        alt="{{ section.settings.image.alt | escape }}"
        loading="lazy"
      >
    {% endif %}

    {% comment %} Heading {% endcomment %}
    {% if section.settings.heading %}
      <h2 class="custom-section-name__heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    {% comment %} Description {% endcomment %}
    {% if section.settings.description %}
      <div class="custom-section-name__description">
        {{ section.settings.description }}
      </div>
    {% endif %}

    {% comment %} CTA Button {% endcomment %}
    {% if section.settings.cta_text and section.settings.cta_link %}
      <a
        href="{{ section.settings.cta_link }}"
        class="custom-section-name__button"
      >
        {{ section.settings.cta_text }}
      </a>
    {% endif %}

    {% comment %} Blocks (if needed) {% endcomment %}
    {% if section.blocks.size > 0 %}
      <div class="custom-section-name__blocks">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'item' %}
              <div class="custom-section-name__block" {{ block.shopify_attributes }}>
                <h3>{{ block.settings.title }}</h3>
                <p>{{ block.settings.description }}</p>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    {% endif %}

  </div>
</div>

<script src="{{ 'section-name.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Section Name",
  "tag": "section",
  "class": "custom-section-name",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Section Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Section description goes here.</p>"
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Style Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "default": 40
    },
    {
      "type": "checkbox",
      "id": "show_feature",
      "label": "Show Feature",
      "default": true
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Item Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Item description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Section Name",
      "blocks": [
        {
          "type": "item"
        },
        {
          "type": "item"
        },
        {
          "type": "item"
        }
      ]
    }
  ]
}
{% endschema %}
