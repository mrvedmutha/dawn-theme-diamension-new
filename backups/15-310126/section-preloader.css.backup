/* Ogg Font Face */
@font-face {
  font-family: 'Ogg';
  src: url('Ogg-Regular.woff') format('woff');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'Ogg';
  src: url('Ogg-RegularItalic.woff') format('woff');
  font-weight: 400;
  font-style: italic;
  font-display: swap;
}

.preloader {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 9999;
  display: flex;
  overflow: hidden;
}

/* Left Side - Video Container */
.preloader__video-container {
  position: relative;
  width: 50%;
  height: 100%;
  background-color: #000;
  overflow: hidden;
}

.preloader__video {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.preloader__video-placeholder {
  width: 100%;
  height: 100%;
  background-color: #000;
}

/* Right Side - Content Container */
.preloader__content {
  position: relative;
  width: 50%;
  height: 100%;
  background-color: #fffaf5;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.preloader__content-inner {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 50px;
  padding: 20px;
}

/* Logo */
.preloader__logo {
  width: 117px;
  height: auto;
  flex-shrink: 0;
}

.preloader__logo img {
  width: 100%;
  height: auto;
  display: block;
}

/* Percentage Counter */
.preloader__percentage {
  font-family: 'Ogg', serif;
  font-size: clamp(80px, 8vw, 125px);
  line-height: 1.2;
  color: #183754;
  text-align: center;
  text-transform: uppercase;
  margin: 0;
  font-weight: 400;
  white-space: nowrap;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Hidden State */
.preloader.is-hidden {
  pointer-events: none;
  visibility: hidden;
}

/* Prevent scrolling when preloader is active */
body.preloader-active {
  overflow: hidden !important;
  height: 100vh;
}

/* Mobile Styles - Only show right side */
@media screen and (max-width: 749px) {
  .preloader__video-container {
    display: none;
  }

  .preloader__content {
    width: 100%;
  }

  .preloader__content-inner {
    gap: 40px;
    max-width: 100%;
  }

  .preloader__logo {
    width: 90px;
  }

  .preloader__percentage {
    font-size: clamp(60px, 15vw, 100px);
  }
}

/* Tablet Adjustments */
@media screen and (min-width: 750px) and (max-width: 989px) {
  .preloader__logo {
    width: 100px;
  }

  .preloader__percentage {
    font-size: clamp(70px, 10vw, 110px);
  }
}

/* Ensure no overflow on any screen size */
@media screen and (max-width: 749px) {
  .preloader__content-inner {
    max-width: 90vw;
  }
}
