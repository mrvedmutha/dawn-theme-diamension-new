/* ==========================================================================
   Preloader Section Styles
   ========================================================================== */

@font-face {
  font-family: 'Ogg';
  src: url('Ogg-Regular.woff') format('woff');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'NeueMontreal';
  src: url('NeueMontreal-Regular.woff2') format('woff2'), url('NeueMontreal-Regular.woff') format('woff');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

/* Preloader Wrapper */
.preloader {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  height: 100dvh;
  background-color: #fffaf5;
  z-index: 9999;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preloader.is-hidden {
  pointer-events: none;
}

/* Preloader Container */
.preloader__container {
  width: 100%;
  max-width: 1440px;
  height: 100%;
  margin: 0 auto;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20px;
  box-sizing: border-box;
}

/* Logo - 64px from top = ~8vh based on 801px */
.preloader__logo {
  position: absolute;
  top: 8vh;
  left: 50%;
  transform: translateX(-50%);
  z-index: 3;
}

.preloader__logo img {
  max-width: 324px;
  height: auto;
  display: block;
}

/* Content Wrapper - Positioned below logo */
.preloader__content-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  position: absolute;
  top: calc(12vh + 60px + 12vh); /* logo top + logo height (~60px) + 96px gap = 12vh */
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2;
  box-sizing: border-box;
}

/* Image Container */
.preloader__image-container {
  position: relative;
  width: 100%;
  max-width: 344px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.preloader__image {
  width: 100%;
  max-width: 344px;
  aspect-ratio: 344 / 144;
  object-fit: contain;
  display: block;
  position: relative;
  z-index: 2;
}

/* Ellipse Arc - Semi-circle spanning viewport, aligned with image */
.preloader__ellipse {
  position: fixed;
  width: 1660.383px;
  height: 1263.354px;
  left: 50%;
  top: calc(8vh + 60px + 12vh + 72px); /* Aligns with middle of image (image height ~144px, so +72px) */
  transform: translateX(-50%);
  border: 1px solid #183754;
  border-radius: 50%;
  z-index: 1;
  pointer-events: none;
}

/* Large screens - ellipse should touch viewport edges */
@media screen and (min-width: 1441px) {
  .preloader__ellipse {
    width: 115vw;
    height: calc(115vw * 0.76);
  }
}

@media screen and (min-width: 1800px) {
  .preloader__ellipse {
    width: 120vw;
    height: calc(120vw * 0.76);
  }
}

/* Tagline - 12px below image = ~1.5vh */
.preloader__tagline {
  font-family: 'NeueMontreal', var(--font-body-family), sans-serif;
  font-size: 20px;
  font-weight: 300;
  line-height: 30px;
  color: #183754;
  text-align: center;
  text-transform: uppercase;
  margin-top: 1.5vh;
  max-width: 360px;
  letter-spacing: 0.02em;
  position: relative;
  z-index: 2;
}

/* Divider Line - Grows to fill available space, 40px gap = ~5vh */
.preloader__divider {
  width: 1px;
  min-height: 5vh;
  flex: 1;
  background-color: #183754;
  margin-top: 5vh;
  margin-bottom: 5vh;
  position: relative;
  z-index: 2;
}

/* Percentage Counter - 40px gap from divider = ~5vh */
.preloader__percentage {
  font-family: 'Ogg', serif;
  font-size: 60px;
  font-weight: 400;
  line-height: 50px;
  color: #183754;
  text-align: center;
  text-transform: uppercase;
  margin-top: auto;
  margin-bottom: 12vh; /* ~96px from bottom based on 801px */
  position: relative;
  z-index: 2;
}

/* ==========================================================================
   Responsive Styles
   ========================================================================== */

@media screen and (max-width: 990px) {
  .preloader__logo img {
    max-width: 260px;
  }

  .preloader__tagline {
    font-size: 24px;
    line-height: 24px;
    max-width: 300px;
  }

  .preloader__percentage {
    font-size: 48px;
    line-height: 40px;
    margin-bottom: 10vh;
  }

  .preloader__divider {
    min-height: 4vh;
    margin-top: 4vh;
    margin-bottom: 4vh;
  }

  .preloader__ellipse {
    width: 1400px;
    height: 1100px;
  }
}

@media screen and (max-width: 750px) {
  .preloader__logo {
    top: 6vh;
  }

  .preloader__content-wrapper {
    top: calc(6vh + 50px + 18vh); /* Increased gap to push content down to touch ellipse */
  }

  .preloader__tagline {
    font-size: 20px;
    line-height: 22px;
    max-width: 260px;
  }

  .preloader__percentage {
    font-size: 36px;
    line-height: 32px;
    margin-bottom: 8vh;
  }

  .preloader__divider {
    min-height: 3vh;
    margin-top: 4vh;
    margin-bottom: 4vh;
  }

  .preloader__ellipse {
    height: 850px;
    top: calc(6vh + 50px + 18vh + 50px); /* Align with image center */
  }
}

@media screen and (max-width: 480px) {
  .preloader__container {
    padding: 0 16px;
  }

  .preloader__logo {
    top: 5vh;
  }

  .preloader__content-wrapper {
    top: calc(5vh + 40px + 16vh); /* Increased gap to push content down to touch ellipse */
  }

  .preloader__image {
    max-width: 240px;
  }

  .preloader__tagline {
    font-size: 18px;
    line-height: 18px;
    max-width: 260px;
  }

  .preloader__percentage {
    font-size: 32px;
    line-height: 24px;
    margin-bottom: 6vh;
  }

  .preloader__divider {
    min-height: 2vh;
    margin-top: 3vh;
    margin-bottom: 3vh;
  }

  .preloader__ellipse {
    width: 800px;
    top: calc(5vh + 40px + 16vh + 40px); /* Align with image center */
  }
}

/* ==========================================================================
   Height-based adjustments for smaller viewports
   ========================================================================== */

@media screen and (max-height: 700px) {
  .preloader__logo {
    top: 5vh;
  }

  .preloader__content-wrapper {
    top: calc(5vh + 50px + 8vh);
  }

  .preloader__divider {
    min-height: 3vh;
    margin-top: 3vh;
    margin-bottom: 3vh;
  }

  .preloader__percentage {
    margin-bottom: 8vh;
  }
}

@media screen and (max-height: 600px) {
  .preloader__logo {
    top: 4vh;
  }

  .preloader__logo img {
    max-width: 180px;
  }

  .preloader__content-wrapper {
    top: calc(4vh + 45px + 6vh);
  }

  .preloader__image {
    max-width: 200px;
  }

  .preloader__tagline {
    font-size: 14px;
    margin-top: 1vh;
  }

  .preloader__divider {
    min-height: 2vh;
    margin-top: 2vh;
    margin-bottom: 2vh;
  }

  .preloader__percentage {
    font-size: 32px;
    margin-bottom: 6vh;
  }
}
