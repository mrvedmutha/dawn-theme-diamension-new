{% comment %}
  Template: search.ajax.liquid
  Purpose: AJAX view for search pagination - returns only product cards
  Author: Wings Design Team
  Version: 1.0
{% endcomment %}

{%- if search.performed and search.results_count > 0 -%}
  {%- for item in search.results -%}
    {%- if item.object_type == 'product' -%}
      {%- render 'product-card-search', product: item -%}
    {%- endif -%}
  {%- endfor -%}
{%- endif -%}
